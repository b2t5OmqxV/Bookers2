<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class='navbar navbar-fixed-top navbar-inverse'>
  <div class='container'>
    <nav class='nav navbar-nav navber-left'>
    <p>Bookers</p>
    </nav>
      <ul class='nav navbar-nav navbar-right'>
    <% if  user_signed_in? %>
        <li><%= link_to user_path(current_user.id) do %>
        <i class='glyphicon glyphicon-home home'>　</i>
        <span>Home</span>
        <% end %></li>
        <li><%= link_to users_path do %>
        <i class='glyphicon glyphicon-user users'>　</i>
        <span>Users</span>
        <% end %>
        </li>
        <li><%= link_to books_path do %>
        <i class='glyphicon glyphicon-book books'>　</i>
        <span>Books</span>
        <% end %>
        </li>
        <li><%= link_to destroy_user_session_path, method: :delete do %>
        <i class='glyphicon glyphicon-log-out logout'>　</i>
        <span>logout</span>
        <% end %>
        </li>
    <% else %>
        <li><a class='glyphicon glyphicon-home home' href='/'> Home</a></li>
        <li><a class='glyphicon glyphicon-link about' href='/home/about'> About</a></li>
        <li><a class='glyphicon glyphicon-edit sign_up'href='/users/sign_up'> Sign up</a></li>
        <li><a class='glyphicon glyphicon-log-in sign_in'href='/users/sign_in'> login</a></li>
    <% end %>
      </ul>
    </div>
  </header>

  <body>
    <%= render 'layouts/notifications' %>
    <%= yield %>
  </body>
</html>
