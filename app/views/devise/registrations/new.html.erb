<div class='body'>
  <div class='conteiner'>
    <p id='notice'></p>
    <div clsaa='row'>
      <div class='main-log in col-md-offset-1 col-md-8'>

        <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>

          <div class='field'>
            <label for='user_name'>Name</label><br/>
            <input autofoucus='autofocus' class='name' type='text' name='user[name]' id='user_name' />
          </div><br/>

          <div class='field'>
            <label for='user_email'>Email</label><br/>
            <input autofocus='autofucus' class='email' type='email' value='' name='user[email]' id='user_email' />
          </div><br/>

          <div class='field'>
            <label for='user_password'>Password</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <input autocomplete='off' class='password' type='password' name='user[password]' id='user_password' />
          </div><br/>

          <div class='field'>
          <label for='user_password_confirmation'>Password confirmation</label><br/>
          <input autocomplete='off' class='password_confirm' type='password' name='user[password_confirmation]' id='user_password_confirmation' />
          </div><br/>

          <div class='actions'>
            <input type='submit' name='commit' value='Sign up' class='btn btn-success' data-disable-with='Sign up' />
          </div><br/>

          <a clss='sign_in' href='/users/sign_in'>Log in</a><br/>

          <% end %>
      </div>
    </div>
  </div>
</div>

<footer>
  <%= render 'temple/footer' %>
</footer>